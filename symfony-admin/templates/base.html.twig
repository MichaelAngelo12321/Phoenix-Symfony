<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Panel Administracyjny{% endblock %} - Phoenix-Symfony</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        
        <!-- Prevent CSS caching issues -->
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
        <meta http-equiv="Pragma" content="no-cache">
        <meta http-equiv="Expires" content="0">
        
        {% block stylesheets %}
        <style>
            body {
                font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
                background-color: #f8f9fc;
            }
            
            .navbar-brand {
                font-weight: 800;
                font-size: 1.75rem;
            }
            
            .sidebar {
                min-height: 100vh;
                background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
                background-size: cover;
            }
            
            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.8);
                padding: 1rem 1.5rem;
                border-radius: 0.35rem;
                margin: 0.25rem 1rem;
            }
            
            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }
            
            .sidebar .nav-link i {
                margin-right: 0.5rem;
                width: 1rem;
                text-align: center;
            }
            
            .content-wrapper {
                min-height: 100vh;
            }
            
            .topbar {
                background-color: #fff;
                border-bottom: 1px solid #e3e6f0;
            }
            
            .card {
                box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
                border: none;
            }
            
            .btn {
                border-radius: 0.35rem;
                font-weight: 600;
            }
            
            .text-gray-800 {
                color: #5a5c69 !important;
            }
            
            .bg-gradient-primary {
                background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
            }
        </style>
        {% endblock %}
    </head>
    <body>
        <div class="d-flex">
            <!-- Sidebar -->
            <nav class="sidebar d-flex flex-column p-0" style="width: 250px;">
                <div class="p-4">
                    <a class="navbar-brand text-white" href="{{ path('admin_users_index') }}">
                        <i class="fas fa-fire"></i>
                        Phoenix Admin
                    </a>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_users' %}active{% endif %}" 
                           href="{{ path('admin_users_index') }}">
                            <i class="fas fa-users"></i>
                            Użytkownicy
                        </a>
                    </li>

                </ul>
                
                <div class="mt-auto p-4">
                    <div class="text-center">
                        <small class="text-white-50">
                            Phoenix-Symfony<br>
                            Admin Panel v1.0
                        </small>
                    </div>
                </div>
            </nav>
            
            <!-- Content Wrapper -->
            <div class="content-wrapper flex-grow-1">
                <!-- Topbar -->
                <nav class="topbar navbar navbar-expand navbar-light">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center">
                            <h1 class="h4 mb-0 text-gray-800 me-3">Panel Administracyjny</h1>
                        </div>
                        
                        <div class="navbar-nav ms-auto">
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> 
                                    {% if app.session.get('admin_data') %}
                                        {{ app.session.get('admin_data').name ?? 'Administrator' }}
                                    {% else %}
                                        Administrator
                                    {% endif %}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Wyloguj</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
                
                <!-- Main Content -->
                <main>
                    <!-- Flash Messages -->
                    <div class="container-fluid mt-3">
                        {% for type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                                    <i class="fas fa-{{ type == 'success' ? 'check-circle' : (type == 'error' ? 'exclamation-triangle' : 'info-circle') }}"></i>
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>
        
        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        

    </body>
</html>

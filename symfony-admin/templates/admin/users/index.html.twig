{% extends 'base.html.twig' %}

{% block title %}Panel Administracyjny - Użytkownicy{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Zarządzanie Użytkownikami</h1>
                <div>
                    {% if api_available %}
                        <span class="badge bg-success me-2">API Dostępne</span>
                    {% else %}
                        <span class="badge bg-danger me-2">API Niedostępne</span>
                    {% endif %}
                    <a href="{{ path('admin_users_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Dodaj Użytkownika
                    </a>
                </div>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Lista Użytkowników</h6>
                </div>
                <div class="card-body">
                    {% if users is empty %}
                        <div class="text-center py-5">
                            {% if not api_available %}
                                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                                <h5>Brak połączenia z API</h5>
                                <p class="text-muted">Nie można pobrać listy użytkowników. Sprawdź czy serwer Phoenix jest uruchomiony.</p>
                                <button class="btn btn-outline-primary" onclick="location.reload()">
                                    <i class="fas fa-sync-alt"></i> Odśwież
                                </button>
                            {% else %}
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h5>Brak użytkowników</h5>
                                <p class="text-muted">Nie ma jeszcze żadnych użytkowników w systemie.</p>
                                <a href="{{ path('admin_users_new') }}" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Dodaj pierwszego użytkownika
                                </a>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Imię</th>
                                        <th>Nazwisko</th>
                                        <th>Data urodzenia</th>
                                        <th>Płeć</th>
                                        <th>Wiek</th>
                                        <th class="text-center">Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td class="fw-bold">#{{ user.id }}</td>
                                            <td>{{ user.first_name }}</td>
                                            <td>{{ user.last_name }}</td>
                                            <td>
                                                {{ user.birthdate|date('d.m.Y') }}
                                            </td>
                                            <td>
                                                {% if user.gender == 'male' %}
                                                    <span class="badge bg-info">Mężczyzna</span>
                                                {% else %}
                                                    <span class="badge bg-pink">Kobieta</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% set birthdate = user.birthdate|date('Y-m-d') %}
                                                {% set now = 'now'|date('Y-m-d') %}
                                                {% set age = ((now|date('U') - birthdate|date('U')) / (365*24*3600))|round(0, 'floor') %}
                                                {{ age }} lat
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_users_show', {id: user.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       title="Pokaż szczegóły">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_users_edit', {id: user.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Edytuj">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-outline-danger" 
                                                            title="Usuń"
                                                            onclick="confirmDelete({{ user.id }}, '{{ user.first_name }} {{ user.last_name }}')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                Łącznie: {{ users|length }} użytkownik(ów)
                            </small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Potwierdzenie usunięcia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Czy na pewno chcesz usunąć użytkownika <strong id="deleteUserName"></strong>?</p>
                <p class="text-danger"><small>Ta operacja jest nieodwracalna.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Usuń</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(userId, userName) {
    document.getElementById('deleteUserName').textContent = userName;
    document.getElementById('deleteForm').action = '/admin/users/' + userId + '/delete';
    
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}

// Auto-refresh API status
setInterval(function() {
    fetch('{{ path('admin_users_api_status') }}')
        .then(response => response.json())
        .then(data => {
            const badge = document.querySelector('.badge');
            if (data.available) {
                badge.className = 'badge bg-success me-2';
                badge.textContent = 'API Dostępne';
            } else {
                badge.className = 'badge bg-danger me-2';
                badge.textContent = 'API Niedostępne';
            }
        })
        .catch(error => {
            console.error('Error checking API status:', error);
        });
}, 30000); // Check every 30 seconds
</script>

<style>
.bg-pink {
    background-color: #e83e8c !important;
}

.table th {
    border-top: none;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.btn-group .btn {
    margin: 0 1px;
}

.card {
    border: none;
    border-radius: 0.5rem;
}

.card-header {
    background-color: #f8f9fc;
    border-bottom: 1px solid #e3e6f0;
}
</style>
{% endblock %}